---
import Layout from '../layouts/Layout.astro';
import { FadeIn } from '../components/react/animations/FadeIn';

const tools = [
  {
    category: "Hardware",
    items: [
      { name: "MacBook Pro 14\"", desc: "M1 Pro, 32GB RAM" },
      { name: "Keychron Q1", desc: "Gateron Oil Kings" },
      { name: "LG Ultrafine 4K", desc: "Crystal clear display" }
    ]
  },
  {
    category: "Software",
    items: [
      { name: "VS Code", desc: "My daily driver" },
      { name: "Arc Browser", desc: "The future of browsing" },
      { name: "Raycast", desc: "Productivity powerhouse" }
    ]
  },
  {
    category: "Tech Stack",
    items: [
      { name: "Next.js / Astro", desc: "Frontend Frameworks" },
      { name: "Tailwind CSS", desc: "Styling" },
      { name: "TypeScript", desc: "Type safety" }
    ]
  }
];
---

<Layout title="Stack">
  <section class="space-y-12">
    <FadeIn client:visible>
      <h1 class="text-4xl font-bold mb-2">Stack</h1>
      <p class="text-muted-foreground">The tools I use to build and create.</p>
    </FadeIn>

    <div class="space-y-10">
      {tools.map((section, idx) => (
        <FadeIn client:visible delay={idx * 0.1}>
          <h2 class="text-xl font-semibold mb-4">{section.category}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {section.items.map((item) => (
              <div class="p-4 rounded-lg border border-border bg-card/50 hover:bg-card transition-colors">
                <h3 class="font-medium">{item.name}</h3>
                <p class="text-sm text-muted-foreground">{item.desc}</p>
              </div>
            ))}
          </div>
        </FadeIn>
      ))}
    </div>
  </section>
</Layout>
