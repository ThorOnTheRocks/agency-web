---
import Layout from '../../layouts/Layout.astro';
import { PortableText } from '../../components/react/PortableText';
import { sanityClient } from '../../lib/sanity';

export const prerender = true; // Static Generation (SSG) is best for blogs

// 1. Generate static paths for all posts
export async function getStaticPaths() {
  const posts = await sanityClient.fetch(`*[_type == "post"]{ "slug": slug.current }`);
  return posts.map((post: any) => ({
    params: { slug: post.slug },
  }));
}

// 2. Fetch data for the specific page
const { slug } = Astro.params;
const post = await sanityClient.fetch(`
  *[_type == "post" && slug.current == $slug][0] {
    title,
    _createdAt,
    content
  }
`, { slug });

if (!post) return Astro.redirect('/404');
---

<Layout title={post.title}>
  <article class="max-w-2xl mx-auto pt-12 pb-20">
    <header class="mb-10 text-center">
        <div class="text-xs font-mono text-muted-foreground mb-4">
            {new Date(post._createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight leading-tight mb-6">
            {post.title}
        </h1>
        <div class="w-20 h-1 bg-white/10 mx-auto rounded-full"></div>
    </header>

    <div class="prose prose-invert prose-neutral max-w-none prose-p:text-muted-foreground prose-headings:text-foreground prose-a:text-blue-400 hover:prose-a:text-blue-300">
      <PortableText value={post.content} />
    </div>
  </article>
</Layout>