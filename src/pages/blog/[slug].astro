---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="max-w-2xl mx-auto pt-12 pb-20">
    <header class="mb-10 text-center">
        <div class="text-xs font-mono text-muted-foreground mb-4">
            {post.data.publishedAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight leading-tight mb-6">
            {post.data.title}
        </h1>
        <div class="w-20 h-1 bg-white/10 mx-auto rounded-full"></div>
    </header>

    <div class="prose prose-invert prose-neutral max-w-none prose-p:text-muted-foreground prose-headings:text-foreground prose-a:text-blue-400 hover:prose-a:text-blue-300">
      <Content />
    </div>
  </article>
</Layout>