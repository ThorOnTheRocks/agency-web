---
import Layout from '../../layouts/Layout.astro';
import { getPosts } from '../../services/sanity';
import type { PostPreview } from '../../types';

export const prerender = true;

const posts: PostPreview[] = await getPosts();
---

<Layout 
  title="Engineering Blog" 
  description="Technical deep dives into frontend infrastructure, React internals, and fullstack patterns."
>
  <header class="mb-16 pt-8">
    <h1 class="text-4xl font-bold tracking-tight mb-4">Writing</h1>
    <p class="text-xl text-muted-foreground max-w-2xl">
      Thoughts on software design, patterns, and the evolving web ecosystem.
    </p>
  </header>

  <div class="space-y-10 max-w-3xl">
    {posts.length > 0 ? posts.map((post) => (
      <article class="group relative flex flex-col space-y-2">
        <div class="flex items-center gap-4 text-xs text-muted-foreground font-mono mb-1">
          <time datetime={post.publishedAt || ''}>
            {post.publishedAt ? new Date(post.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'No date'}
          </time>
          <span class="w-px h-3 bg-white/20"></span>
          <span>Article</span>
        </div>
        
        <h2 class="text-2xl font-semibold tracking-tight group-hover:text-blue-400 transition-colors">
          <a href={`/blog/${post.slug.current}`}>
            <span class="absolute inset-0"></span>
            {post.title}
          </a>
        </h2>
        
        <p class="text-muted-foreground leading-relaxed">
          {post.excerpt}
        </p>
        <div class="text-sm font-medium text-blue-500 opacity-0 group-hover:opacity-100 transition-opacity pt-2">
          Read Article &rarr;
        </div>
      </article>
    )) : (
        <div class="py-20 text-center border border-dashed border-white/10 rounded-lg">
            <p class="text-muted-foreground font-mono">Query returned 0 records.</p>
        </div>
    )}
  </div>
</Layout>